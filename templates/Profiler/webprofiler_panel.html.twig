{% if profile %}
    <div id="resume">
        <strong>{{ 'Profile for'|t }}:</strong>
        {{ profile.method|upper }}
        {% if profile.method|upper in ['GET', 'HEAD'] %}
            <a href="{{ profile.url }}">{{ profile.url }}</a>
        {% else %}
            {{ profile.url }}
        {% endif %}
        <span class="date">
                <em>by {{ profile.ip }}</em> at <em>{{ profile.time|date('r') }}</em>
            </span>

        (<a id="resume-view-all" href="{{ url("webprofiler.admin_list") }}">{{ 'View last 10'|t }}</a>)
    </div>
{% endif %}

<div data-vertical-tabs-panes>

    {% for name, template in templates %}
        {% set menu %}{{ template.renderBlock('menu', { 'collector': profile.getcollector(name)}) }}{% endset %}
        {% set menu_summary %}{{ template.renderBlock('menu_summary', { 'collector': profile.getcollector(name)}) }}{% endset %}
        {% if menu != '' %}
            <details class="form-wrapper" open="open" id="{{ name }}">
                <summary role="button" aria-controls="{{ name }}" aria-expanded>{{ menu|raw }}</summary>
                <div class="summary" style="display:none">{{ menu_summary }}</div>
                <div class="details-wrapper">
                    {{ templates[name].renderblock('panel', {
                    'collector': profile.getcollector(name),
                    'token': profile.token,
                    'name': name
                    }) }}
                </div>
            </details>
        {% endif %}
    {% endfor %}

</div>